<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rltMainToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@drawable/background_toolbar"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vwpMainContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rltMainToolbar"
            android:layout_above="@+id/tblMainBottomBar"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tblMainBottomBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <android.support.design.widget.TabItem
                android:id="@+id/tbtMainHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_home"
                android:title="@string/menu_home"/>

            <android.support.design.widget.TabItem
                android:id="@+id/tbtMainSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_search"
                android:title="@string/menu_search"/>

            <android.support.design.widget.TabItem
                android:id="@+id/tbtMainStores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_stores"
                android:title="@string/menu_stores"/>

            <android.support.design.widget.TabItem
                android:id="@+id/tbtMainApps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:icon="@drawable/ic_apps"
                android:title="@string/menu_apps"/>

        </android.support.design.widget.TabLayout>

    </RelativeLayout>

</layout>